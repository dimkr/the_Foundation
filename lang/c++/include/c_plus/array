#include <cstddef>

namespace i { namespace typeless {

class Array {
public:
    using Size = std::size_t;

    Array(Size elementSize);
    Array(const Array &);
    Array(Array &&);
    ~Array();

    std::size_t size() const;

    void *data();
    void *at(Size pos);
    const void *data() const;
    const void *at(Size pos) const;

    Array &operator=(const Array &);
    void *operator[](Size pos);
    const void *operator[](Size pos) const;

private:
    void *_array;
};

} // namespace typeless

template <typename T>
class Array : public typeless::Array {
public:
    Array() : typeless::Array(sizeof(T)) {}
    Array(const Array &a) : typeless::Array(a) {}
    Array(Array &&a) : typeless::Array(a) {}

    T *       data()             { return  reinterpret_cast<T *>(typeless::Array::data()); }
    T &       at(Size pos)       { return *reinterpret_cast<T *>(typeless::Array::at(pos)); }
    const T * data() const       { return  reinterpret_cast<const T *>(typeless::Array::data()); }
    const T & at(Size pos) const { return *reinterpret_cast<const T *>(typeless::Array::at(pos)); }

    T &       operator[](Size pos)       { return at(pos); }
    const T & operator[](Size pos) const { return at(pos); }
};

} // namespace i
